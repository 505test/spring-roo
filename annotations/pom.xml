<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.springframework.roo</groupId>
		<artifactId>spring-roo</artifactId>
		<version>1.0.0.M1</version>
	</parent>
	<artifactId>spring-roo-annotations</artifactId>
	<packaging>jar</packaging>
	<name>Spring Roo - Annotations (ASLv2 &amp; GPLv3 Dual Licensed)</name>
	<build>
		<plugins>
			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
				<version>1.3</version>
				<executions>
					<execution>
						<id>generate-sources</id>
						<phase>generate-sources</phase>
						<configuration>
							<tasks>
								<echo message="Deleting current content" />
								<delete dir="${basedir}/src/main/java/org/"/>
								<echo message="Copying over annotations" />
                                <copy todir="${basedir}/src/main/java/" preservelastmodified="true">
                                    <fileset dir="${basedir}/..">
                                        <include name="**/Roo*.java"/>
                                        <exclude name="core/**"/>
                                    </fileset>
                                    <!-- Discard the module names prefixes from each file path -->
									<regexpmapper from="^(.*).src.main.java.(.*)$$" to="\2"/>
                                </copy>
							</tasks>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
				</executions>
				<dependencies>
					<!-- Required so the regexpmapper can be used in the Ant task -->
					<dependency>
						<groupId>org.apache.ant</groupId>
						<artifactId>ant-apache-regexp</artifactId>
						<version>1.7.1</version>
					</dependency>
				</dependencies>
			</plugin>
		</plugins>
	</build>
	<dependencies>
	</dependencies>
</project>
